// reverse linked list - iterative
public ListNode reverseList(ListNode head) {
    if (head == null || head.next == null) {
        return head;
    }
    ListNode next = head;
    ListNode curr = null;
    ListNode prev = null;
    while (next != null) {
        curr = next;
        next = next.next;
        curr.next = prev;
        prev = curr;
    }
    return curr;
}

// reverse linked list - recursive
public ListNode reverseList(ListNode head) {
    if (head == null || head.next == null) {
        return head;
    }
    // 1 - 2 - 3 - 4
    ListNode next = head.next;
    ListNode newHead = reverseList(next);
    next.next = head;
    head.next = null;
    return newHead;
}

// remove duplicates from sorted linked list - LC 83
    public ListNode deleteDuplicates(ListNode head) {
        if (head == null || head.next == null) {
            return head;
        }
        ListNode curr = head;
        while (curr != null) {
            ListNode next = curr.next;
            // find next different node
            while (next != null && next.val == curr.val) {
                next = next.next;
            }
            // now we've found next one - either next is null or next.val != curr.val
            curr.next = next;
            curr = curr.next;
        }
        return head;
    }

// remove duplicates from sorted linked list - LC 82
    public ListNode deleteDuplicates(ListNode head) {
        if (head == null || head.next == null) {
            return head;
        }
        ListNode dummy = new ListNode(-1);
        ListNode prev = dummy;
        ListNode curr = head;
        while (curr != null) {
            ListNode next = curr.next;
            // find the first node which is different from curr
            while (next != null && next.val == curr.val) {
                next = next.next;
            }
            // now we've verified curr is unique, we update prev.next = curr
            if (curr.next == next) {
                prev.next = curr;
                prev = prev.next;
            }
            curr = next;
        }
        prev.next = null;
        return dummy.next;
    }

// Merge Two Sorted Linked List - iterative solution
    public ListNode mergeTwoLists(ListNode list1, ListNode list2) {
        ListNode curr = new ListNode(-1);
        ListNode dummy = curr;
        while (list1 != null || list2 != null) {
            if (list1 != null && list2 != null) {
                if (list1.val <= list2.val) {
                    curr.next = list1;
                    list1 = list1.next;
                } else {
                    curr.next = list2;
                    list2 = list2.next;
                }
            } else if (list1 != null) {
                curr.next = list1;
                list1 = list1.next;
            } else {
                curr.next = list2;
                list2 = list2.next;
            }
            curr = curr.next;
        }
        return dummy.next;
    }

// Merge Two Sorted Linked List - recursive solution
    public ListNode mergeTwoLists(ListNode list1, ListNode list2) {
        if (list1 == null || list2 == null) {
            return list1 == null ? list2 : list1;
        }
        if (list1.val <= list2.val) {
            list1.next = mergeTwoLists(list1.next, list2);
            return list1;
        } 
        list2.next = mergeTwoLists(list1, list2.next);
        return list2;
    }

// Merge K Sorted Linked List - Divide and Conquer D&C
    public ListNode mergeKLists(ListNode[] lists) {
        return helper(lists, 0, lists.length - 1);
    }
    private ListNode helper(ListNode[] lists, int left, int right) {
        if (left > right) {
            return null;
        }
        if (left == right) {
            return lists[left];
        }
        int mid = left + (right - left) / 2;
        ListNode a = helper(lists, left, mid);
        ListNode b = helper(lists, mid + 1, right);
        return merge2(a, b);
    }
    private ListNode merge2(ListNode a, ListNode b) {
        if (a == null || b == null) {
            return a == null ? b : a;
        }
        if (a.val <= b.val) {
            a.next = merge2(a.next, b);
            return a;
        } else {
            b.next = merge2(a, b.next);
            return b;
        }
    }

// Merge K Sorted Linked List - Using PriorityQueue(Min-Heap)
    public ListNode mergeKLists(ListNode[] lists) {
        if (lists == null || lists.length == 0) {
            return null;
        }
        PriorityQueue<ListNode> pq = new PriorityQueue<ListNode>((a, b) -> a.val - b.val);
        ListNode dummy = new ListNode(-1);
        ListNode curr = dummy;
        for (ListNode a : lists) {
            if (a == null) {
                continue;
            }
            pq.offer(a);
        }
        while (!pq.isEmpty()) {
            ListNode temp = pq.poll();
            curr.next = temp;
            curr = curr.next;
            if (temp.next != null) {
                pq.offer(temp.next);
            }
        }
        return dummy.next;
    }
